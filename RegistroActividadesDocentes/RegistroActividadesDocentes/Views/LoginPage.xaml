<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RegistroActividadesDocentes.Views.LoginPage"
             Title="Ingreso">
  <ScrollView>
    <StackLayout Spacing="10">
      <Label FontSize="30"
             HorizontalOptions="CenterAndExpand"
             Text="Ingreso al sistema"/>
      <Label HorizontalOptions="CenterAndExpand"
             Text="Ingrese usuario y contraseña" />
      <Entry x:Name="UsuarioEntry"
             Placeholder="Ingrese su usuario" />
      <Entry x:Name="PasswordEntry"
             Placeholder="Ingrese su contraseña" />
      <StackLayout Orientation="Horizontal" Spacing="10">
        <Label Text="Recordarme"
               VerticalOptions="EndAndExpand"/>
        <Switch x:Name="DefaultSwitch"
                IsEnabled="True"
                VerticalOptions="End" />
      </StackLayout>
      <Button x:Name="IngresarButton"
              Text="Ingresar" />
      <Button x:Name="NuevoButton"
              Text="Registrarse" />
    </StackLayout>
  </ScrollView>
</ContentPage>